extends layout

block content
	nav.navbar.navbar-default.navbar-fixed-top.topnav(role='navigation')
		.container.topnav
			// Brand and toggle get grouped for better mobile display
			.navbar-header
				button.navbar-toggle(type='button' data-toggle='collapse' data-target='#bs-example-navbar-collapse-1')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand.topnav(href='#') Storyline Nai
			// Collect the nav links, forms, and other content for toggling
			#bs-example-navbar-collapse-1.collapse.navbar-collapse
				ul.nav.navbar-nav.navbar-right
					li
						a(href='/addPost') write
					li
						a(href='/dashboard') share
					li
						a(href='/discover') discover
	div(ng-view)
	// Footer
	footer
		.container
			.row
				.col-lg-12
					ul.list-inline
						li
							a(href='/') Home
						li.footer-menu-divider &sdot;
						li write
						li.footer-menu-divider &sdot;
						li share
						li.footer-menu-divider &sdot;
						li discover
					p.copyright.text-muted.small Copyright &copy; StoryLine Nai 2016. All Rights Reserved
block scripts
	script(src='js/lib/angular/angular.js')
	script(src='js/app.js')
	script(src='js/services.js')
	script(src='js/controllers.js')
	script(src='js/filters.js')
	script(src='js/directives.js')
