div(ng-repeat='post in posts')
  .content-section-a
    .container
      .row
        .col-lg-5.col-sm-6
          hr.section-heading-spacer
          .clearfix
          h2.section-heading {{post.title}}
          h4 By User
          p.lead
            | {{post.text}}
          button.btn.btn-lg.btn-success.btn-block.blog-btn
            a(href='/readPost/{{post.id}}') More
        .col-lg-5.col-lg-offset-2.col-sm-6
          img.img-responsive(src='img/ipad.png' alt='')
    // /.container
  // /.content-section-a
  .content-section-b
    .container
      .row
        .col-lg-5.col-lg-offset-1.col-sm-push-6.col-sm-6
          hr.section-heading-spacer
          .clearfix
          h2.section-heading {{post.title}}
          h4 By User
          p.lead
            | {{post.text}}
          button.btn.btn-lg.btn-success.btn-block.blog-btn
            a(href='/readPost/{{post.id}}') More
        .col-lg-5.col-sm-pull-6.col-sm-6
          img.img-responsive(src='img/dog.png' alt='')
    // /.container
  // /.content-section-b
.banner
  .container
    .row
      .col-lg-6
        h2 Connect with StoryLine Nai
      .col-lg-6
        ul.list-inline.banner-social-buttons
          li
            a.btn.btn-default.btn-lg(href='https://twitter.com/SBootstrap')
              i.fa.fa-twitter.fa-fw
              span.network-name Twitter
          li
            a.btn.btn-default.btn-lg(href='#')
              i.fa.fa-facebook.fa-fw
              span.network-name Facebook