.intro-header
  .container
    .row
      .col-lg-12
        .row
          .col-lg-5.col-lg-offset-4.panel-form
            .panel.panel-default
              .panel-heading
                h3.panel-title Please sign in
              .panel-body
                form(accept-charset='UTF-8' role='form')
                  fieldset
                    .form-group
                      input.form-control(placeholder='Username' name='username' type='text')
                    .form-group
                      input.form-control(placeholder='Password' name='password' type='password')
                    input.btn.btn-lg.btn-success.btn-block(type='submit' value='Login')